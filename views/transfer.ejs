<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head.ejs') %>
    <title>Transfer Page</title>
</head>
<body>
    <%- include('./partials/navbar.ejs') %>
    <div class="center container">
        <h3>Transfer Page</h3>
        <form action="/transfer/<%= customer._id %>" method="POST" class="col s12">
          <div class="center container">
            <div class="row center">
              <div class="input-field">
                <i class="material-icons prefix">account_box</i>
                <input disabled id="sender" type="text" class="validate" name="sender" value="<%= customer.name %>">
                <label for="sender">Sender</label>
              </div>
            </div>
            <div class="row">
              <div class="input-field">
                <i class="material-icons prefix">account_circle</i>
                <input id="receiver" type="text" class="validate" name="receiver">
                <label for="receiver">Transfer to</label>
              </div>
            </div>
            <div class="row">
              <div class="input-field">
                <i class="material-icons prefix">monetization_on</i>
                <input id="amount" type="tel" class="validate" name="amount">
                <label for="amount">Amount</label>
              </div>
            </div>
            <div class="center">
                  <button style="background-color: #ee6e73" class="btn waves-effect waves-light" type="submit" name="action">Transfer</button>
            </div>
          </div>
        </form>
      </div>

      <!-- <%- include('./partials/footer.ejs') %> -->

      <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
      <script>
        document.addEventListener("DOMContentLoaded", function(event){
          M.updateTextFields();
        });
      </script>

</body>
</html>