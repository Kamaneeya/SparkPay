<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head.ejs') %>
    <title>Transfer Page</title>
</head>
<body>
    <%- include('./partials/navbar.ejs') %>
    <div class="center row container">
        <h1>Transfer Page</h1>
        <form action="/transfer" method="POST" class="col s12">
          <div class="row">
            <div class="input-field col s6">
              <i class="material-icons prefix">account_circle</i>
              <input id="icon_prefix" type="text" class="validate">
              <label for="icon_prefix">Transfer to</label>
            </div>
            <div class="input-field col s6">
              <i class="material-icons prefix">monetization_on</i>
              <input id="icon_telephone" type="tel" class="validate">
              <label for="icon_telephone">Amount</label>
            </div>
            <div class="center">
                <button class="btn waves-effect waves-light" type="submit" name="action">Transfer</button>
            </div>
          </div>
        </form>
      </div>
</body>
</html>