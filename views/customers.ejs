<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head.ejs') %>
    <title>SparkPay | Customers List</title>
</head>
<body>

    <%- include('./partials/navbar.ejs') %>
    <h3 style="padding: 20px 10px; text-align: center;" class="container">Customers List</h3>
    <% if(customers.length > 0) { %>
        <% for(var i=0;i< customers.length;i++){ %>
        <div class="container">
        <ul class="collection with-header">
            <li style="padding: 0 0 0 10px;" class="collection-item">
            <div>
            <table>
                <tr style="border: 0;">
                    <td class="container"><strong><%= customers[i].name %></strong></td>
                    <td><a style="background-color: #ee6e73;" class="waves-effect waves-light btn" href="/customer/<%= customers[i]._id %>">View</a></td>
                    <td><a style="background-color: #ee6e73;" class="waves-effect waves-light btn" href="/transfer/<%= customers[i]._id %>">Transfer</a></td>
                </tr>
            </table>
            </div>
            </li>
        </ul>
        </div>
    <% } %>
    <% } else { %>
        <br>
        <ul class="container collection with-header">
            <li class="collection-item">There are no customers.</li>
        </ul>
    <% } %>

    <%- include('./partials/footer.ejs') %>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

</body>
</html>